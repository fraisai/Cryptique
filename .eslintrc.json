{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest"
  },
  "plugins": ["sql", "react"],
  "rules": {
    "arrow-body-style": "off",
    "no-console": 1,
    "sql/format": [
      1,
      {
        "ignoreExpressions": false,
        "ignoreInline": true,
        "ignoreTagless": true
      }
    ],
    "sql/no-unsafe-query": [
      1,
      {
        "allowLiteral": false
      }
    ], 
    "import/extensions": [
      "ignorePackages"
      // "off"
    ],
    "import/no-unresolved": 0
  }
}
